{% use "form_div_layout.html.twig" %}


{%- block form_row -%}
{%- set widget_attr = {} -%}
{%- if help is not empty -%}
	{%- set widget_attr = {'attr': {'aria-describedby': id ~ "_help"}} -%}
{%- endif -%}

{% set row_attr = row_attr|merge({'class': row_attr.class|default('') ~ ' form-row'}) %}

{% with {'attr': row_attr} %}
<div{{block('attributes')}}>
	{{- form_label(form) -}}
	{{- form_widget(form, widget_attr) -}}
	{{- form_errors(form) -}}
	{{- form_help(form) -}}
</div>
{% endwith %}{%- endblock form_row -%}{%- block form_errors -%}{%- if errors|length > 0 -%}
<ul class="form-errors">
	{%- for error in errors -%}
		<li>{{ error.message }}</li>
	{%- endfor -%}
</ul>{%- endif -%}{%- endblock form_errors -%}
